{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler compatibility */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting & Safety */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@play/supabase-client": ["../../packages/supabase-client/src"],
      "@play/pylon": ["../../packages/pylon/src"],
      "@play/game-renderer": ["../../packages/game-renderer/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "../../packages/pylon/src/**/*.ts",
    "../../packages/pylon/src/**/*.tsx",
    "../../packages/supabase-client/src/**/*.ts",
    "../../packages/game-renderer/src/**/*.ts",
    "../../packages/game-renderer/src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
